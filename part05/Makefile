CC = gcc
CFLAGS = -O2 \
	 -g \
	 -pedantic \
	 -Wall \
	 -W \
	 -Wmissing-prototypes \
	 -Wno-sign-compare \
	 -Wimplicit-fallthrough \
	 -Wno-unused-parameter \

BUILD_PATH ?= build

COMMON = ./common
VM = ./vm
COMPILER = ./compiler
CLIB = ./clib
TEST = ./test

CLIB_SRC := \
	luaaux.c \

COMMON_SRC := \
	luamem.c \
	luaobject.c \
	luastate.c \
	luastring.c \
	luatable.c \
	luainit.c \
	luabase.c \

COMPILER_SRC := \
	lualexer.c \
	luazio.c \
	luaparser.c \
	luacode.c \

VM_SRC := \
	luado.c \
	luagc.c \
	luavm.c \
	luaopcodes.c \
	luafunc.c \

TEST_SRC := \
	p*_test.c \

all : tinylua

tinylua : main.c \
	$(foreach v, $(CLIB_SRC), $(CLIB)/$(v)) \
	$(foreach v, $(COMMON_SRC), $(COMMON)/$(v)) \
	$(foreach v, $(COMPILER_SRC), $(COMPILER)/$(v)) \
	$(foreach v, $(VM_SRC), $(VM)/$(v)) \
	$(foreach v, $(TEST_SRC), $(TEST)/$(v))
	$(CC) $(CFLAGS) -I$(CLIB) -I$(COMMON) -I$(VM) -I$(TEST) -o $@ $^ -lm

OBJECTS = \
	  main.o \
	  luaaux.o \
	  luastate.o \
	  luaobject.o \
	  luamem.o \
	  luado.o \
	  luagc.o \
	  luastring.o \
	  luatable.o \
	  luavm.o \
	  p1_test.o \
	  p2_test.o \
	  p3_test.o \
	  p4_test.o \

$(BUILD_PATH)/tinylua: $(foreach v, $(OBJECTS), $(BUILD_PATH)/$(v)) | $(BUILD_PATH)
	$(CC) $(CFLAGS) -o $@ $^ -lm

$(BUILD_PATH)/main.o: main.c $(CLIB)/luaaux.h $(TEST)/p1_test.h $(TEST)/p2_test.h $(TEST)/p3_test.h | $(BUILD_PATH)
	$(CC) $(CFLAGS) -c -o $@ $<

$(BUILD_PATH)/luaaux.o: $(CLIB)/luaaux.c $(CLIB)/luaaux.h $(COMMON)/luastate.h $(VM)/luado.h $(VM)/luavm.h | $(BUILD_PATH)
	$(CC) $(CFLAGS) -c -o $@ $<

$(BUILD_PATH)/luastate.o: $(COMMON)/luastate.c $(COMMON)/luastate.h $(COMMON)/luamem.h  $(COMMON)/luaobject.h $(COMMON)/luastring.h $(COMMON)/luatable.h | $(BUILD_PATH)
	$(CC) $(CFLAGS) -c -o $@ $<

$(BUILD_PATH)/luaobject.o: $(COMMON)/luaobject.c $(COMMON)/luaobject.h $(COMMON)/lua.h | $(BUILD_PATH)
	$(CC) $(CFLAGS) -c -o $@ $<

$(BUILD_PATH)/luamem.o: $(COMMON)/luamem.c $(COMMON)/luastate.h $(VM)/luado.h | $(BUILD_PATH)
	$(CC) $(CFLAGS) -c -o $@ $<

$(BUILD_PATH)/luado.o: $(VM)/luado.c $(COMMON)/luastate.h $(COMMON)/luamem.h | $(BUILD_PATH)
	$(CC) $(CFLAGS) -c -o $@ $<

$(BUILD_PATH)/luagc.o: $(VM)/luagc.c $(COMMON)/luastate.h $(COMMON)/luamem.h $(COMMON)/luatable.h | $(BUILD_PATH)
	$(CC) $(CFLAGS) -c -o $@ $<

$(BUILD_PATH)/luastring.o: $(COMMON)/luastring.c $(COMMON)/luastate.h $(VM)/luagc.h $(COMMON)/luamem.h | $(BUILD_PATH)
	$(CC) $(CFLAGS) -c -o $@ $<

$(BUILD_PATH)/luatable.o: $(COMMON)/luatable.c $(COMMON)/luastate.h $(VM)/luagc.h $(COMMON)/luamem.h $(COMMON)/luastring.h $(VM)/luado.h | $(BUILD_PATH)
	$(CC) $(CFLAGS) -c -o $@ $<

$(BUILD_PATH)/luavm.o: $(VM)/luavm.c $(COMMON)/luastate.h $(VM)/luagc.h $(VM)/luado.h $(COMMON)/luastring.h $(COMMON)/luatable.h | $(BUILD_PATH)
	$(CC) $(CFLAGS) -c -o $@ $<

$(BUILD_PATH)/p1_test.o: $(TEST)/p1_test.c $(CLIB)/luaaux.h | $(BUILD_PATH)
	$(CC) $(CFLAGS) -c -o $@ $<

$(BUILD_PATH)/p2_test.o: $(TEST)/p2_test.c $(CLIB)/luaaux.h $(VM)/luagc.h | $(BUILD_PATH)
	$(CC) $(CFLAGS) -c -o $@ $<

$(BUILD_PATH)/p3_test.o: $(TEST)/p3_test.c $(CLIB)/luaaux.h $(VM)/luagc.h | $(BUILD_PATH)
	$(CC) $(CFLAGS) -c -o $@ $<

$(BUILD_PATH)/p4_test.o: $(TEST)/p4_test.c $(CLIB)/luaaux.h $(VM)/luagc.h $(COMMON)/luastring.h $(COMMON)/luatable.h | $(BUILD_PATH)
	$(CC) $(CFLAGS) -c -o $@ $<

$(BUILD_PATH) :
	mkdir $@

clean:
	rm tinylua
